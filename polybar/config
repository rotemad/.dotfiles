font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1
font-3 = fontawesome:pixelsize=8;1

modules-left = i3 
modules-center = 
modules-right = backlight volume battery date wlan eth powermenu  

