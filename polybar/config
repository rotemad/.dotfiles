[colors]
background = ${xrdb:color0}
background-alt = #444
foreground = ${xrdb:color2}
foreground-alt = #555
highlight = ${xrdb:color2}
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/example]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 21
offset-x = 0%
offset-y = -1%
;radius = 0.0
;fixed-center = ture

;BAR COLOROS
;Light gray
;background = #9a000000
;foreground = #eee
